<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:padding="10dp"
    tools:context=".signup">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etNama1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nama"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:background="@drawable/et"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etUsername1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/et"
        app:layout_constraintTop_toBottomOf="@+id/etNama1" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/etEmail1"
        android:hint="Email"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/et"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etUsername1" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et"
        android:padding="10dp"
        android:id="@+id/etPassword1"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/etEmail1" />

    <Button
        android:id="@+id/buttonSignUp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword1" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Kembali"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignUp1"
        tools:layout_editor_absoluteX="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>